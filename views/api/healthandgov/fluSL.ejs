<!DOCTYPE html>
<html>
<head>
    <title>Sparkline Chart</title>
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
</head>
<body>
    <canvas id="sparkline-chart"></canvas>
    
    <!-- Hidden div to store the last chart value -->
    <div id="lastChartValue" style="display: none;"></div>

    <script>
        var apiUrl = 'https://stats.je/proxy?targetUrl=https://opendata.gov.je/api/3/action/datastore_search?resource_id=0e2525be-4b3a-4224-a889-0e5d0afb058d';

        var xhr = new XMLHttpRequest();
        xhr.open('GET', apiUrl, true);

        xhr.onload = function () {
            if (xhr.status >= 200 && xhr.status < 300) {
                var response = JSON.parse(xhr.responseText);

                var records = response.result.records;
                var years = records.map(function (record) {
                    var year = record["Flu season"];
                    return year;
                });

                var data1 = records.map(function (record) {
                    return parseFloat(record["Adults aged 65 and over"]) * 100;
                });

                // Extract the last chart value for "Total employment"
                var lastChartValue = data1[data1.length - 1];

                // Create a sparkline chart using Chart.js
                var ctx = document.getElementById('sparkline-chart').getContext('2d');
                var sparklineChart = new Chart(ctx, {
                    type: 'line',
                    data: {
                        labels: years, // This sets the x-axis labels
                        datasets: [{
                            data: data1,
                            borderColor: 'black',
                            borderWidth: 2,
                            fill: true,
                        }],
                    },
                    options: {
                        elements: {
                            point:{
                                radius: 0
                            }
                        },
                        plugins: {
                            legend: {
                                display: false
                            }
                        },
                        scales: {
                            x: {
                                display: true,
                                title: {
                                    display: true,
                                },
                                ticks: {
                                    maxRotation: 0, // Prevents label rotation
                                    minRotation: 0, // Prevents label rotation
                                    callback: function(value, index, values) {
                                        // Show only the first and last x-axis labels
                                        if (index === 0 || index === values.length - 1) {
                                            return years[index];
                                        } else {
                                            return '';
                                        }
                                    }
                                }
                            },
                            y: {
                                display: false,
                            },
                        },
                    },
                });
                
            // Format the lastChartValue to two decimal places and store it in a variable
            var fluValue = parseFloat(lastChartValue).toLocaleString();

            // Put the formatted value into the hidden div
            document.getElementById('lastChartValue').textContent = 'Last Chart Value: ' + fluValue;

            // Send the formatted value to the parent window
            window.parent.postMessage({ fluValue: fluValue }, '*');
            } else {
                console.error('Failed to fetch data from the API');
            }
        };

        xhr.send();
    </script>
</body>
</html>
